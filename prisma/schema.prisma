generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model ContactRequest {
  id          Int      @id @default(autoincrement())
  fullName    String
  email       String 
  message     String   @db.Text
  
  // Metadatos para gesti√≥n
  status      String   @default("PENDIENTE")
  createdAt   DateTime @default(now())
}